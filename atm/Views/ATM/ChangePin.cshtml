@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change PIN</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(135deg, #1e3c72, #2a5298);
            color: white;
        }

        .pin-container {
            padding: 30px;
            border-radius: 15px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            max-width: 400px;
            width: 100%;
            text-align: center;
        }

        .form-control {
            background: rgba(255, 255, 255, 0.2);
            border: none;
            color: white;
            text-align: center;
            font-size: 20px;
            font-weight: bold;
        }

        .btn-back {
            font-size: 18px;
            padding: 10px;
            background-color: #ff7b00;
            color: white;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
            margin-top: 15px;
        }

            .btn-back:hover {
                background-color: #ff9c42;
            }
    </style>
</head>
<body>
    <div class="pin-container">
        <h2>Change PIN</h2>

        <form method="post">
            <input type="password" name="currentPin" class="form-control mb-3" placeholder="Current PIN" required />
            <input type="password" name="newPin" class="form-control mb-3" placeholder="New PIN" required />
            <input type="password" name="confirmPin" class="form-control mb-3" placeholder="Confirm New PIN" required />
            <button type="submit" class="btn btn-primary w-100">Change PIN</button>
        </form>

        <p class="text-warning mt-3">@ViewBag.Message</p>
        <a href="@Url.Action("MainMenu", "ATM")" class="btn-back">Back to Menu</a>
    </div>
</body>
</html>
