@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ATM Main Menu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(135deg, #1e3c72, #2a5298);
            color: white;
        }

        .menu-container {
            padding: 30px;
            border-radius: 15px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            max-width: 600px;
            width: 100%;
            text-align: center;
        }

        .menu-buttons {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
            margin-top: 20px;
        }

        .menu-btn {
            font-size: 18px;
            font-weight: bold;
            padding: 15px;
            border: none;
            background-color: #ff7b00;
            color: white;
            border-radius: 5px;
            box-shadow: 3px 3px 0px rgba(0, 0, 0, 0.5);
            transition: 0.2s;
            width: 100%;
        }

            .menu-btn:hover {
                background-color: #ff9c42;
            }

        .logout {
            color: #ff7b00;
            text-decoration: none;
            font-weight: bold;
            display: block;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="menu-container">
        <h2>Main Menu</h2>

        <div class="menu-buttons">
            <a href="@Url.Action("WithdrawCash", "ATM")" class="btn menu-btn">Withdraw Cash</a>
            <a href="@Url.Action("CheckBalance", "ATM")" class="btn menu-btn">Check Balance</a>
            <a href="@Url.Action("TransferFunds", "ATM")" class="btn menu-btn">Transfer Funds</a>
            <a href="@Url.Action("ChangePin", "ATM")" class="btn menu-btn">Change PIN</a>
            <a href="@Url.Action("MiniStatement", "ATM")" class="btn menu-btn">Mini Statement</a>
            <a href="@Url.Action("CashDeposit", "ATM")" class="btn menu-btn">Cash Deposit</a>
        </div>

        <a href="@Url.Action("Logout", "ATM")" class="logout">Logout</a>
    </div>
</body>
</html>
